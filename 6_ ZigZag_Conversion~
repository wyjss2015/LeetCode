char* convert(char* s, int numRows) {
    char *k,*p,*q;
    int i,j,l,flag,step;
    l=strlen(s);
    k = (char*)malloc(sizeof(char)*l);
    q=k;
    if(numRows==1){			//处理只有一行的边界情况
        p=s;
        while(p-s+1<=l){
            *q++=*p++;
        }
        return k;
    }
    for(i=0;i<=numRows-1;i++){
        p=s+i;
        flag=0;
        while(p-s+1<=l){
             *q++=*p;
             if(flag==0){
                 step = 2*(numRows-i-1);
                 flag = 1;
             }else{
                 step = 2*i;
                 flag = 0;
             }
             if(step != 0)p += step;	//处理第一行和最后一行（打印两次）的特殊情况
             else --q;
        }
    }
    return k;
}
